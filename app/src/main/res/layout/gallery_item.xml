<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_spacing_margin"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/gallery_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/gallery_max_image_width" />

    <TextView
            android:id="@+id/gallery_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/global_spacing_margin" />
</LinearLayout>